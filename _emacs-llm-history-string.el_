(defcustom --el-history-dir
  (expand-file-name "history"
                    (file-name-directory
                     (or load-file-name buffer-file-name)))
  "Directory to store history files."
  :type 'directory
  :group 'emacs-llm)

(defcustom --el-history-file
  (expand-file-name "emacs-llm-history.md" --el-history-dir)
  "File path to save conversation history."
  :type 'string
  :group 'emacs-llm)

(defcustom --el-history-max-size
  (* 10 1024 1024)
  ;; 10MB
  "Maximum size for history files in bytes."
  :type 'number
  :group 'emacs-llm)

(defcustom --el-n-histories 10
  "Maximum number of interactions to include in API calls."
  :type 'integer
  :group 'emacs-llm)

(defvar --el-history
  '()
  "List to keep track of conversation history.")

(defun --el-history-ensure-dir
    ()
  "Ensure history directory exists."
  (unless
      (file-exists-p --el-history-dir)
    (make-directory --el-history-dir t)))

(defun --el-history-backup-file-if
    ()
  "Backup history file with timestamp if it exceeds max size."
  (when
      (and
       (file-exists-p --el-history-file)
       (>
        (file-attribute-size
         (file-attributes --el-history-file))
        --el-history-max-size))
    (--el-history-ensure-file)
    (let
        ((backup-file
          (expand-file-name
           (format "history-%s.md"
                   (format-time-string "%Y-%m-%d-%H-%M-%S"))
           --el-history-dir)))
      (copy-file --el-history-file backup-file)
      (message "Backed up history to %s" backup-file)
      ;; Create new empty history file
      (with-temp-file --el-history-file
        (insert "[]")))))

(defun --el-history-load
    ()
  "Load conversation history from `--el-history-file` and setq as `--el-history`."
  (--el-history-backup-file-if)
  (when
      (file-exists-p --el-history-file)
    (with-temp-buffer
      (insert-file-contents --el-history-file)
      (setq --el-history
            (buffer-string)))))

(defun --el-history-save
    ()
  "Save conversation history to `--el-history-file`."
  (--el-history-ensure-file)
  (with-temp-file --el-history-file
    (insert --el-history)))

(defun --el-history-append
    (role content &optional template)
  "Append a message with ROLE and CONTENT to the conversation history.
If TEMPLATE is provided, include it as part of the metadata."
  (let*
      ((template-tag
        (if template
            (format " [%s]" template)
          ""))
       (entry
        (format "\n%s\n\n%s%s\n\n%s\n\n%s\n"
                --el-separator
                (upcase role)
                template-tag
                content
                --el-separator)))
    (setq --el-history
          (concat --el-history entry))
    (--el-history-save)))

(defun el-history-clear
    ()
  "Clear the conversation history."
  (interactive)
  (setq --el-history
        "")
  (--el-history-save)
  (message "Emacs-LLM conversation history cleared."))

;;;###autoload
(defun el-history-show
    (&optional num-interactions)
  "Display the conversation history in a buffer.
Show NUM-INTERACTIONS most recent interactions (default: 20)."
  (interactive
   (list
    (read-number "Number of interactions to show: " 20)))
  (--el-history-load)
  (let*
      ((buffer
        (get-buffer-create "*Emacs-LLM History*"))
       (entries
        (split-string --el-history --el-separator t))
       (num-entries
        (length entries))
       (entries-to-show
        (if
            (> num-entries num-interactions)
            (nthcdr
             (- num-entries num-interactions)
             entries)
          entries)))
    (with-current-buffer buffer
      (let
          ((inhibit-read-only t))
        (erase-buffer)
        (dolist
            (entry entries-to-show)
          (insert entry)
          (insert --el-separator))
        (goto-char
         (point-min))
        (--el-history-mode)
        (display-buffer buffer)))))

(defun --el-history-get-recent-as-string
    ()
  "Get the most recent conversation history limited by `--el-n-histories` as a string."
  (--el-history-load)
  (let*
      ((entries
        (split-string --el-history --el-separator t))
       (num-entries
        (length entries))
       (start-index
        (max 0
             (- num-entries --el-n-histories)))
       (entries-to-use
        (if
            (> num-entries 0)
            (nthcdr start-index entries)
          nil))
       (concatenated-string
        (mapconcat #'identity entries-to-use "\n\n")))
    (if
        (string= concatenated-string "")
        "No conversation history available."
      concatenated-string)))

(defun --el-history-concatenate-recent-history-as-string
    (text)
  ""
  (concat
   "\n--- CONVERSATION HISTORY STARTS ---\n"
   (--el-history-get-recent)
   "\n--- CONVERSATION HISTORY ENDS ---\n"
   text))

(provide 'emacs-llm-history)

(when
    (not load-file-name)
  (message "emacs-llm-history.el loaded."
           (file-name-nondirectory
            (or load-file-name buffer-file-name))))